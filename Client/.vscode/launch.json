{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Program",
			"program": "${workspaceFolder}/node_modules/electron-webpack/out/cli.js",
			"args": [
				"dev"
			],
//			"skipFiles": [
//				"<node_internals>/**"
//			],
			"preLaunchTask": "Compile Typescript",
			"outputCapture": "std",
			"protocol": "inspector",
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Electron: Main",
			"protocol": "inspector",
			"cwd": "${workspaceRoot}",
			"runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
			"windows": {
				"runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
			},
			"program": "${workspaceRoot}/src/main/main.js",
			"outputCapture": "std"
		},
		{
			"name": "Electron: Renderer",
			"type": "chrome",
			"request": "attach",
			"port": 9080,
			"webRoot": "${workspaceFolder}",
			"timeout": 5000
		}
	],
	"compounds": [
		{
			"name": "Electron: All",
			"configurations": [
				"Electron: Main",
				"Electron: Renderer"
			],
			"preLaunchTask": "Compile Typescript"
		}
	]
}