{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"watch": true,
		"strict": true,
		"strictNullChecks": false,
		"sourceMap": true,
		"inlineSources" : true,
		"noUnusedLocals": false,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns" : true,
		"removeComments": true,
		"experimentalDecorators":true
	},
	"exclude": [
		"node_modules"
	]
}
