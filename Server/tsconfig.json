{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"watch": true,
		"strict": true,
		"strictNullChecks": false,
		"inlineSourceMap": true,
		"inlineSources" : true,
		"noUnusedLocals": false,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns" : true,
		"removeComments": true,
		"experimentalDecorators":true,
		"resolveJsonModule": true
	},
	"exclude": [
		"node_modules",
		"excluded"
	]
}
