{ 															
	"version": "0.2.0",										
	"configurations": [                                     
		{
			"type": "node",
			"request": "attach",
			"name": "Attach by Process ID",
			"processId": "${command:PickProcess}",
			"skipFiles": [
				"<node_internals>/**"
			]
		},
		{                                                   
			"type": "node",                                 
			"request": "launch",                            
			"name": "Launch Server",                       
			"program": "${workspaceFolder}\\Server.js",     
			"outFiles": [                                   
				"${workspaceFolder}/*.js"     	            
			]												
		},
		
		{                                                   
			"type": "node",                                 
			"request": "launch",                            
			"name": "Launch Container",                       
			"program": "${workspaceFolder}\\ServerMonitor.js",     
			"outFiles": [                                   
				"${workspaceFolder}/*.js"     	            
			]												
		}   
	]                                                       
} 															
